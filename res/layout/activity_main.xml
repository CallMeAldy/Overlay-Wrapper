<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background02" >

    <Space
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/shortInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/infoShort"
            android:textColor="@color/white" />

        
        <TextView
            android:id="@+id/longInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_weight="0.45"
            android:text="@string/infoLong"
            android:textColor="@color/white"
            android:maxLines = "100"
            android:scrollbars = "vertical"/>
			
        <FrameLayout
            android:id="@+id/tapArea"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:background="@drawable/ripple" >

            <TextView
                android:id="@+id/pushInfo"
                style="@style/MaterialLight"
                android:layout_width="206dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_margin="20dp"
                android:layout_marginRight="80dp"
                
                android:background="@drawable/ripple"
                android:text="@string/pushButton"
                android:textColor="@color/mint"
                android:textSize="@dimen/PushButton_TextSize" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:adjustViewBounds="true"
                android:background="@drawable/ripple"
                android:elevation="2dp"
                android:src="@drawable/fab_copy" />

        </FrameLayout>
    </LinearLayout>

</LinearLayout>
